{
  "name": "groov",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@groov/*",
      "packages/*"
    ],
    "nohoist": []
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn workspaces run lint && yarn workspaces run build:ts"
    }
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.10.0",
    "@graphql-codegen/typescript": "^1.10.0",
    "@graphql-codegen/typescript-resolvers": "^1.11.0",
    "@react-native-community/eslint-config": "^0.0.6",
    "@react-native-community/eslint-plugin": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "eslint": "7.15.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "prettier": "^1.19.1",
    "typescript-styled-plugin": "^0.15.0"
  },
  "scripts": {
    "buildImages": "./scripts/build_images.sh",
    "pushImages": "./scripts/push_images.sh",
    "createClusters": "./scripts/createClusters.sh",
    "apply": "./scripts/apply.sh",
    "buildPushApplyImages": "yarn buildImages && yarn pushImages && yarn apply",
    "fullDeploy": "./scripts/deploy-k8s.sh",
    "deleteClusters": "./scripts/deleteClusters.sh",
    "psContainer": "docker exec -it postgresql bash",
    "psTerminal": "psql -U groov -d groov",
    "rmNodeModules:all": "rm -rf node_modules && rm -rf packages/*/node_module"
  },
  "dependencies": {
    "patch-package": "^6.2.0",
    "typescript": "^3.7.4"
  }
}
