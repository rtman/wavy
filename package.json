{
  "name": "groov",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn tsc --build tsconfig.build.json"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 140,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.10.0",
    "@graphql-codegen/typescript": "^1.10.0",
    "@graphql-codegen/typescript-resolvers": "^1.11.0",
    "lerna": "^3.19.0"
  },
  "scripts": {
    "postgres": "docker exec -it postgresql bash"
  },
  "dependencies": {
    "graphql": "^14.5.8",
    "typescript": "^3.7.4"
  }
}
