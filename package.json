{
  "name": "groov",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@groov/*",
      "packages/*"
    ],
    "nohoist": []
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn deps:check && yarn workspaces run lint && yarn workspaces run build:ts && exec < /dev/tty && lerna version --amend"
    }
  },
  "scripts": {
    "clean": "lerna clean",
    "addDep": "lerna add",
    "bootstrap": "lerna bootstrap",
    "changed": "lerna changed --all",
    "ls": "lerna ls --all",
    "deps:check": "yarn manypkg check",
    "deps:fix": "yarn manypkg fix",
    "lint": "yarn workspaces run lint",
    "build:ts": "yarn workspaces run build:ts",
    "compose": "docker-compose down && docker-compose build && docker-compose up",
    "prune": "docker system prune",
    "prune:volumes": "docker system prune --volumes",
    "buildImages": "./scripts/build_images.sh",
    "pushImages": "./scripts/push_images.sh",
    "createClusters": "./scripts/createClusters.sh",
    "apply": "./scripts/apply.sh",
    "buildPushApplyImages": "yarn buildImages && yarn pushImages && yarn apply",
    "fullDeploy": "./scripts/deploy-k8s.sh",
    "deleteClusters": "./scripts/deleteClusters.sh",
    "psTerminal": "docker exec -it postgresql bash -c 'psql -U groov -d groov; exec bash'"
  },
  "dependencies": {
    "@manypkg/cli": "^0.17.0",
    "@react-native-community/eslint-config": "^0.0.6",
    "@react-native-community/eslint-plugin": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.17.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.0.10",
    "lerna": "^3.19.0",
    "patch-package": "^6.2.0",
    "prettier": "^2.2.1"
  }
}
