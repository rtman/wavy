{
  "name": "@groov/mobile",
  "version": "0.0.2",
  "private": true,
  "workspaces": {
    "nohoist": [
      "*react-native*",
      "*react-native*/**",
      "@react-native*/**",
      "@react-native*",
      "@react-navigation*",
      "@react-navigation*/**",
      "@apollo",
      "@apollo/**",
      "apollo-link-http",
      "apollo-link-http/**",
      "apollo-boost",
      "apollo-boost/**"
    ]
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts?(x)' && npm run prettier:check",
    "prettier": "prettier --write 'src/**/*.ts?(x)'",
    "prettier:check": "prettier -c 'src/**/*.ts?(x)'",
    "eslint": "eslint 'src/**/*.ts?(x)'",
    "eslintfix": "eslint 'src/**/*.ts?(x)' --fix",
    "build:ts": "yarn tsc --build tsconfig.json",
    "build:env": "sh ./scripts/build-env.sh",
    "install:gems": "(cd ios; bundle check || bundle install; cd -)",
    "install:hacks": "yarn patch-package",
    "install:pods": "diff ios/Podfile.lock ios/Pods/Manifest.lock || (cd ios; bundle exec pod install; cd -)",
    "install:jetify": "jetify",
    "link": "react-native link",
    "bump:patch": "cd ios; fastlane bump_version && fastlane tag_version; cd -; cd android; fastlane bump_version && fastlane tag_version; cd -",
    "bump:minor": "cd ios; fastlane bump_minor_version && fastlane tag_version; cd -; cd android; fastlane bump_minor_version && fastlane tag_version; cd -",
    "start:fresh": "yarn start --reset-cache",
    "start": "react-native start",
    "clean:metro": "watchman watch-del-all && yarn trash $TMPDIR/{react,metro,haste}*",
    "clean": "yarn run clean:metro && yarn trash ./ios/Pods ./ios/build ./android/build ./android/app/build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "yarn build:e2e:ios && yarn test:e2e:ios",
    "android": "react-native run-android",
    "ios": "react-native run-ios"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@react-native-community/masked-view": "^0.1.6",
    "@react-native-firebase/app": "^6.2.0",
    "@react-native-firebase/auth": "^6.2.0",
    "@react-native-firebase/firestore": "^6.2.0",
    "@react-native-firebase/storage": "^6.2.0",
    "@react-navigation/core": "^5.0.0-alpha.26",
    "@react-navigation/material-bottom-tabs": "^5.0.0-alpha.34",
    "@react-navigation/native": "^5.0.0-alpha.16",
    "@react-navigation/stack": "^5.0.0-alpha.61",
    "apollo-boost": "^0.4.7",
    "apollo-link-http": "^1.5.16",
    "patch-package": "^6.2.0",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-gesture-handler": "^1.5.3",
    "react-native-paper": "^3.4.0",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.6.2",
    "react-native-screens": "^2.0.0-alpha.25",
    "react-native-swift": "^1.2.2",
    "react-native-track-player": "^2.0.0-rc13",
    "react-native-vector-icons": "^6.6.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "styled-components": "^4.4.1",
    "zustand": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/runtime": "^7.7.5",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.15",
    "@types/react-native": "^0.60.24",
    "@types/styled-components": "^4.4.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "metro-react-native-babel-preset": "^0.57.0",
    "react-test-renderer": "16.9.0",
    "typescript-styled-plugin": "^0.15.0"
  },
  "jest": {
    "preset": "react-native"
  }
}
